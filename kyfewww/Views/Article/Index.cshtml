@model IEnumerable<kyfelib.Article>
@{
	ViewBag.Title = "YKFE Articles";
}

@section scripts {
	<script type="text/javascript">
		$(document).ready(function() {

		});
	</script>
}
<div id="body">
	<section class="featured">
		<div
			class="content-wrapper">
			<h2>Articles </h2>
			<button class="btn" data-toggle="modal" data-target="#editForm">Add New</button>
			<table id="articles" class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Date </th>
						<th>Title </th>
						<th>Author </th>
					</tr>
				</thead>
				<tbody>
					@if (Model.Any())
					{
						foreach (kyfelib.Article article in Model)
						{
							<tr>
								<td>@Html.ActionLink(article.RowKey, "Index", new {id = article.RowKey})</td>
								<td>@*article.Locales[0].Name*@</td>
								<td>@*@article.Locales[0].Author*@</td>
								<td>@Html.ActionLink("Edit", "ArticleEdit", new{controller = "Home", id = article.RowKey})</td>
							</tr>
						}
					}
					else
					{
						<tr>
							<td colspan="4">No articles</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</section>
</div>
