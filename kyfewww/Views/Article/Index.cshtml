@model IEnumerable<kyfelib.ContentModel>
@{
	ViewBag.Title = "YKFE Articles";
}

@section scripts {
	<script type="text/javascript">
		$(document).ready(function() {

		});
	</script>
}
			<h2>Articles </h2>
			<table id="articles" class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Date </th>
						<th>Type </th>
						<th>Title </th>
						<th>Author </th>
					</tr>
				</thead>
				<tbody>
					@if (Model.Any())
					{
						foreach (var con in Model)
						{
							var name = con.Locales.Any() ? con.Locales[0].Name : string.Empty;
							var author = con.Locales.Any() ? con.Locales[0].Author : string.Empty;
							
							<tr>
								<td>@Html.ActionLink(con.Id, "Index", new {id = con.Id})</td>
								<td>@Enum.GetName(typeof(kyfelib.ContentType), con.Type)</td>
								<td>@name</td>
								<td>@author</td>
								<td>@Html.ActionLink("Edit", "Edit", new{controller = "EditContent", area = "Admin", id = con.Id})</td>
							</tr>
						}
					}
					else
					{
						<tr>
							<td colspan="5">No articles</td>
						</tr>
					}
				</tbody>
			</table>
